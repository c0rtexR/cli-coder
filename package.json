{
  "name": "cli-coder",
  "version": "0.1.0",
  "description": "AI-powered CLI coding assistant",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "cli-coder": "./bin/cli-coder"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "node tests/e2e/run-tests.js",
    "test:real": "node tests/real/run-tests.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:real",
    "test:ci": "npm run test:unit && npm run test:integration",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docs": "typedoc src --out docs/api",
    "release": "changeset publish"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.56.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "conf": "^14.0.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.0",
    "glob": "^11.0.3",
    "ink": "^6.0.1",
    "inquirer": "^12.7.0",
    "openai": "^5.9.0",
    "ora": "^8.2.0",
    "react": "^19.1.0",
    "simple-git": "^3.28.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@eslint/js": "^9.31.0",
    "@types/node": "^24.0.13",
    "@types/react": "^19.1.8",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.31.0",
    "ink-testing-library": "^4.0.0",
    "lodash": "^4.17.21",
    "memfs": "^4.17.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typedoc": "^0.28.7",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "cli",
    "ai",
    "coding",
    "assistant",
    "typescript"
  ],
  "author": "",
  "license": "MIT"
}
