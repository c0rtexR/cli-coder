{
  "name": "cli-coder",
  "version": "0.1.0",
  "description": "AI-powered CLI coding assistant",
  "main": "dist/index.js",
  "bin": {
    "cli-coder": "./bin/cli-coder"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "docs": "typedoc src --out docs/api",
    "release": "changeset publish"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "inquirer": "^9.0.0", 
    "chalk": "^5.0.0",
    "ora": "^7.0.0",
    "conf": "^11.0.0",
    "simple-git": "^3.0.0",
    "openai": "^4.0.0",
    "@anthropic-ai/sdk": "^0.17.0",
    "zod": "^3.22.0",
    "dotenv": "^16.0.0",
    "glob": "^10.3.0",
    "ink": "^4.4.1",
    "react": "^18.0.0",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "tsx": "^4.0.0",
    "tsup": "^8.0.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "typedoc": "^0.25.0",
    "@changesets/cli": "^2.27.0",
    "@types/react": "^18.0.0"
  }
}